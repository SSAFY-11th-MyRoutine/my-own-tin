<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.myroutine.model.dao.PointDao">

	<!-- 포인트 등록 -->
	<insert id="insert" parameterType="Point">
		INSERT INTO point (users_user_id, amount, record)
		VALUES (#{userId}, #{amount}, #{record})
	</insert>
	
	<!-- 포인트 삭제 -->
	<!-- 추후 createAt으로부터 3달 뒤 삭제되도록 수정 예정 -->
	<delete id="delete" parameterType="int">
		DELETE FROM point
		WHERE point_id = #{id}
	</delete>
	
	<!-- 포인트 전체 조회 -->
	<select id="selectAll" parameterType="int" resultType="Point">
		SELECT *
		FROM point
		WHERE user_id = #{userId}
	</select>

	<!-- 총 포인트 조회 -->
	<select id="getTotalPoint" parameterMap="int">
		SELECT SUM(amount)
		FROM point
		WHERE user_id = #{userId}
	</select>
	
</mapper>