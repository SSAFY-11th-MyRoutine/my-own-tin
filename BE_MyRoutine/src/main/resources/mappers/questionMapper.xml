<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.myroutine.model.dao.QuestionDao">

	<!-- 질문 등록 -->
	<insert id="insert" parameterType="Question">
		INSERT INTO questions (user_id, writer, title, content, like_cnt)
		VALUES (#{userId}, #{writer}, #{title}, #{content}, #{likeCnt})
	</insert>

	<!-- 질문 수정 -->
	<update id="update" parameterType="Question">
		UPDATE questions
		SET title = #{title}, content = #{content}
		WHERE id = #{id}
	</update>

	<!-- 질문 삭제 -->
	<!-- <delete id="delete" parameterType="int">
		DELETE FROM questions
		WHERE id = #{id}
	</delete> -->

	<!-- delete_at 만 현재 시각으로 변경하는 쪽으로 구현 -->
	<update id="delete" parameterType="int">
		UPDATE questions
		SET delete_at = now()
		WHERE id = #{id}
	</update>

	<!-- 질문 검색 조회 -->
	<select id="search" parameterType="SearchCondition" resultType="Question">
		SELECT * FROM questions 
		<if test="key != ''">
			WHERE ${key} LIKE CONCAT('%', #{word}, '%')
		</if>
		<if
			test="orderBy != ''">
			ORDER BY ${orderBy} ${orderByDir}
		</if>
	</select>

	<!-- 질문 상세 조회 -->
	<select id="searchById" parameterType="int" resultType="Question">
		SELECT *
		FROM questions
		WHERE id = #{id}
	</select>

	<!-- 조회수 증가 -->
	<!-- <update id="updateViewCnt" parameterType="int">
		UPDATE questions
		SET
		view_cnt = view_cnt + 1
		WHERE id = #{id};
	</update> -->

</mapper>